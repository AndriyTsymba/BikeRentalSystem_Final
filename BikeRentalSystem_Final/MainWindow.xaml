<Window x:Class="BikeRentalSystem_Final.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bike Rental" Height="450" Width="800">
    <DockPanel Margin="10">
        <DataGrid Name="BicycleGrid" AutoGenerateColumns="True" DockPanel.Dock="Top" Height="300"/>
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <Button Name="RentBtn" Content="Rent" Click="Rent_Click" Margin="5"/>
            <Button Name="ReturnBtn" Content="Return" Click="Return_Click" Margin="5"/>
            <Button Name="AddBtn" Content="Add Bicycle" Click="Add_Click" Margin="5"/>
        </StackPanel>
    </DockPanel>
</Window>